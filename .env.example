# SystemsF1RST Mobile - Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# BACKEND API
# =============================================================================

# BodyF1rst-Backend-CLEAN API URL
EXPO_PUBLIC_API_URL=https://bodyf1rst-backend-clean-mdkalcrowq-uc.a.run.app

# API timeout in milliseconds
EXPO_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# REAL-TIME (Pusher/Laravel Echo)
# =============================================================================

# Pusher configuration for real-time updates
EXPO_PUBLIC_PUSHER_KEY=your-pusher-key
EXPO_PUBLIC_PUSHER_CLUSTER=us2

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable geofencing for time clock
EXPO_PUBLIC_ENABLE_GEOFENCING=true

# Enable AI Note Taker
EXPO_PUBLIC_ENABLE_AI_NOTES=true

# Enable AI Agent
EXPO_PUBLIC_ENABLE_AI_AGENT=true

# =============================================================================
# APP SETTINGS
# =============================================================================

# App name
EXPO_PUBLIC_APP_NAME=SystemsF1RST

# =============================================================================
# GOOGLE MAPS (for location features)
# =============================================================================

# Google Maps API Key (required for reverse geocoding)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug logging
EXPO_PUBLIC_DEBUG=false
